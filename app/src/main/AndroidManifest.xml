<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcodez.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".HcodezApp">
        <activity android:name=".ui.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.LoginActivity" />

        <activity android:name=".ui.AddCodeActivity"
            android:theme="@style/AppTheme.CustomTheme"
            >
        </activity>

        <activity android:name=".ui.FindCodeActivity"
            android:theme="@style/AppTheme.CustomTheme"
            >
        </activity>

        <activity android:name=".ui.MainMenuActivity"
            android:theme="@style/MainMenu.CustomTheme">
        </activity>

        <activity android:name=".ui.CodeDetailsActivity"
            android:theme="@style/AppTheme.CustomTheme"/>

        <activity android:name=".ui.SettingsMenuActivity"
            android:theme="@style/AppTheme"/>

    </application>

</manifest>