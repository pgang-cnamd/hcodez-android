<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hcodez.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="HCode"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".HcodezApp">
        <activity android:name=".ui.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.MainActivity" />

        <activity android:name=".ui.PopAdd"
            android:theme="@style/AppTheme.CustomTheme"
            >
        </activity>

        <activity android:name=".ui.PopFind"
            android:theme="@style/AppTheme.CustomTheme"
            >
        </activity>

        <activity android:name=".ui.MainMenu">
        </activity>

    </application>

</manifest>